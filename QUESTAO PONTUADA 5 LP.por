programa {
  funcao inicio() {
    
    inteiro a = 1, b = 3, resultado
    cadeia operacao 
    //Escreva 
   escreva ("Digite a Operaçao desejada: ")
  leia (operacao)

    //calculo

    se (operacao == "+" ){
      escreva (a+b)
    }

    se (operacao == "-"){
      escreva (a-b)
    }

    se (operacao == "*"){
      escreva (a*b)
    }

    se (operacao == "/"){
      escreva (a/b)
    }

    

  }
}
